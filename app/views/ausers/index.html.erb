<h1>Listing ausers</h1>

<table>
  <tr>
    <th>Username</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ausers.each do |auser| %>
  <tr>
    <td><%= auser.username %></td>
    <% if (User.find(session[:user_id]).admin) %>
    <td><%= link_to 'Show', auser %></td>
    <td><%= link_to 'Edit', edit_auser_path(auser) %></td>
    <td><%= link_to 'Destroy', auser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

