<h1>Listing users</h1>

<% if notice %>
	<p id="notice"><%= notice%></p>
<%end%>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Username</th>
    <th>Job</th>
    <th>Address</th>
    <th>City</th>
    <th>Country</th>
    <th>Organization</th>
    <th>Faculty</th>
    <th>Departement</th>
    <th>Mail</th>
    <th>Mobile</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td style="width: 80px; max-width: 80px; overflow: hidden"><%= user.name %></td>
    <td><%= user.username %></td>
    <td style="width: 40px; max-width: 40px; overflow: hidden"><%= user.job %></td>
    <td style="width: 40px; max-width: 40px; overflow: hidden"><%= user.address %></td>
    <td style="width: 40px; max-width: 40px; overflow: hidden"><%= user.city %></td>
    <td style="width: 40px; max-width: 40px; overflow: hidden"><%= user.country %></td>
    <td style="width: 40px; max-width: 40px; overflow: hidden"><%= user.organization %></td>
    <td style="width: 40px; max-width: 40px; overflow: hidden"><%= user.faculty %></td>
    <td style="width: 40px; max-width: 40px; overflow: hidden"><%= user.departement %></td>
    <td style="width: 70px; max-width: 70px; overflow: hidden"><%= user.mail %></td>
    <td style="width: 40px; max-width: 40px; overflow: hidden"><%= user.mobile %></td>
    <td bgcolor="yellow"><%= link_to 'Show', user %></td>
    <td bgcolor="yellow"><%= link_to 'Edit', edit_user_path(user) %></td>
    <td bgcolor="yellow"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
